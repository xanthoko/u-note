<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text_color</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/black_gray</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#4AB5A7</item>
    </style>

    <style name="WhiteCheck">
        <item name="colorAccent">#4AB5A7</item>
    </style>

    <style name="CustomToolbarTheme" parent="AppTheme.AppBarOverlay">
        <item name="android:textColorPrimary">@color/text_color</item>
    </style>

    <style name="NotesTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="NotesTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="NotesTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
